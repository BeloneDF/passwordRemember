generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model User {
    id        String      @id @default(uuid())
    username  String
    email     String
    password  String
    verified  Boolean
    passwords Passwords[]
    photo     String
}

model Passwords {
    id                          String  @id @default(uuid())
    password                    String
    name                        String
    login                       String
    image                       String
    second_verification         Boolean
    verificarion_software       String
    image_verification_software String
    userId                      String
    user                        User    @relation(fields: [userId], references: [id])
}
